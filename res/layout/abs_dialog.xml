<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_pop_name"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="@dimen/pop_left_margin"
        android:layout_marginBottom="@dimen/pop_top_margin"
        android:layout_marginTop="@dimen/pop_top_margin"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:text="title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/pop_title_text_size" />

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/pop_edittext_margin"
        android:layout_marginEnd="@dimen/pop_edittext_margin"
        android:layout_marginStart="@dimen/pop_edittext_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal" />

    <include layout="@layout/bottom_button" 
        android:id="@+id/bottom_button"/>

</LinearLayout>